doctype 5
html(lang="fr")
	head
		title Login
		link(rel="stylesheet", type="text/css", href="../css/bootstrap.css")
		link(rel="stylesheet", type="text/css", href="../css/bootstrap-responsive.css")
	body
		div.container
			div.row
				div.col-md-4.col-md-offset-4
					div.panel.panel-default
						div.panel-heading
							h3.panel-title Please sign in
						div.panel-body
							span #{messageError}
							form(accept-charset="UTF-8", role="form", action="/user/login", method="post")
								fieldset
									div.form-group
										input.form-control(placeholder="E-mail", name="email", type="text")
									div.form-group
										input.form-control(placeholder="Password", name="password", type="password", value="")
										input.btn.btn-lg.btn-success.btn-block(type="submit", value="Login")
						div.panel-heading
							h3.panel-title Or register
						div.panel-body
							form(accept-charset="UTF-8", role="form", action="/user/register" method="POST")
								fieldset
									div.form-group
										input.form-control(placeholder="E-mail", name="email", type="text")
									div.form-group
										input.form-control(placeholder="Password", name="password", type="password", value="")
										iinput.btn.btn-lg.btn-success.btn-block(type="submit", value="Register")
		script(type="text/javascript", src="../js/jquery-1.10.2.js")
		script(type="text/javascript", src="../js/bootstrap.js")